<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.youth.banner.Banner
        android:id="@+id/bannerEWM"
        android:layout_width="match_parent"
        android:layout_height="240dp" />

    <ImageView
        android:id="@+id/imgScanRes"
        android:layout_below="@+id/bannerEWM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/tvLongCheckText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgScanRes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="点击分享给好友"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLongCheckText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="扫描二维码" />

    <Button
        android:id="@+id/btnScanHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnScan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="历史扫描记录"
        android:visibility="gone" />

</RelativeLayout>